# Postgres
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DB_NAME?sslmode=require

# App
NODE_ENV=development
PORT=3000

# Auth
JWT_SECRET=replace-me-legacy-jwt-secret
JWT_ACCESS_SECRET=replace-me-access
JWT_REFRESH_SECRET=replace-me-refresh
STAFF_JWT_SECRET=replace-me-staff
AUDIT_HMAC_SECRET=replace-me-audit-hmac

# Database behavior
DB_SYNC=false

# Security telemetry (optional)
SECURITY_RULE_WINDOW_MINUTES=10
SECURITY_ALERT_DEDUP_MINUTES=30
